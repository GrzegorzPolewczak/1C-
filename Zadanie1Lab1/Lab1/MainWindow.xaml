<Window x:Name="mojaApka_mainwindow" x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="337" Width="543" Background="#FFA577AD">
    <Grid>
        <TextBox x:Name="txtPromien" HorizontalAlignment="Left" Margin="97,24,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Background="#FF8AEACD"/>
        <Label Content="Promień:&#xD;&#xA;" HorizontalAlignment="Left" Margin="21,21,0,0" VerticalAlignment="Top" Width="71"/>
        <Label Content="Wysokość:&#xD;&#xA;" HorizontalAlignment="Left" Margin="21,63,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="txtWysokosc" HorizontalAlignment="Left" Margin="97,66,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Background="#FF8AEACD"/>
        <Button x:Name="btnOblicz" Content="OBLICZ" HorizontalAlignment="Left" Margin="57,105,0,0" VerticalAlignment="Top" Height="37" Width="134" Background="#FF78D023" Click="btnOblicz_Click"/>
        <Label x:Name="lbWynik" Content="0" HorizontalAlignment="Left" Margin="21,161,0,0" VerticalAlignment="Top" Height="29" Width="418" Background="#FFB7DC5A"/>
        <Label x:Name="lbPP" Content="0" HorizontalAlignment="Left" Margin="21,204,0,0" VerticalAlignment="Top" Width="418" Background="#FFB7DC5A"/>
        <ComboBox x:Name="cbxRodzajBryly" HorizontalAlignment="Left" Margin="282,24,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" SelectionChanged="cbxRodzajBryly_SelectionChanged">
            <ComboBoxItem Content="Walec"/>
            <ComboBoxItem Content="Kula"/>
            <ComboBoxItem Content="Stozek"/>
        </ComboBox>
        <CheckBox x:Name="chkObliczObjetosc" Content="Oblicz objętość" HorizontalAlignment="Left" Margin="331,75,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkObliczPolePow" Content="Oblicz Pole Powierzchni" HorizontalAlignment="Left" Margin="342,105,0,0" VerticalAlignment="Top" Width="168"/>
        <Button x:Name="btnZamknij" Content="Zamknij" HorizontalAlignment="Left" Margin="230,113,0,0" VerticalAlignment="Top" Click="btnZamknij_Click"/>

    </Grid>
</Window>
